@model List<Products>
@{
    ViewData["Title"] = "Cart";
}

<div class ="container">
    <h2 class="text-info">Cart</h2>

    <div class="row">
        <div class="container">
            <div class="table-responsive p-2">
                <table class="table table-bordered">

                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Product Type</th>
                            <th>Color</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model){
                            <tr>
                                <td><img src="~/@item.Image" width="100px"height="75px"/></td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.ProductTypes.ProductType</td>
                                <td>@item.ProductColor</td>
                                <td>
                                    <a asp-area="UI" asp-controller="Product" asp-route-Id="@item.Id" asp-action="Remove">Remove</a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a asp-action="Index" asp-controller="Home" class="btn btn-success">Back to home</a>

        </div>
        <div class="col-md-6 text-end">
            <h4>Total Price:</h4>
            <h3>@Model.Sum(c=>c.Price)</h3>
            <a asp-area="UI" asp-action="Checkout" asp-controller="Order" class="btn btn-info">Checkout</a>

        </div>

    </div>
</div>
