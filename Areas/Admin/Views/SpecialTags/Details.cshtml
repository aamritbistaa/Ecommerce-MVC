@model SpecialTags

@{
    ViewData["Title"] = "Details";
}
<h2>Details Special Tag</h2>
<form method="post" asp-action="Details">
    <div class="p-4 rounded border">
        <div asp-validation="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SpecialTag"></label>
            </div>
            <div class="col-5">
                <input asp-for="SpecialTag" class="form-control" disabled />
            </div>
            <span asp-validation-for="SpecialTag" class="text-danger"></span>
        </div>
        <div class="form-group mt-4">
            @* <button type="submit" class="btn btn-primary">Edit</button> *@

            <a asp-action="Edit" class="btn btn-primary" asp-route-Id="@Model.Id">Edit</a>
            <button asp-action="Index" class="btn btn-primary">Back to list</button>

        </div>
    </div>
</form>

@section Scripts {
    @* Client side validation *@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}