@model SpecialTags

@{
    ViewData["Title"] = "Create";
}
<h2>Create Special Type</h2>
<form method="post" asp-action="Create">
    <div class="p-4 rounded border">
        <div asp-validation="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SpecialTag"></label>
            </div>
            <div class="col-5">
                <input asp-for="SpecialTag" class="form-control" />
            </div>
            <span asp-validation-for="SpecialTag" class="text-danger"></span>
        </div>
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Create</button>
            <button asp-action="Index" class="btn btn-primary">Back to list</button>
        </div>
    </div>
</form>