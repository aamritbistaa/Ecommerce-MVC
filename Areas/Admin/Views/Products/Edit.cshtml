@model Ecommerce.Models.Products

@{
    ViewData["Title"] = "EEdit";
}


<div class="container">
    <h2 class="text-info">Edit Product</h2>
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="p-4 rounded border">
            <div asp-validation-summary="All" class="text-danger"></div>
            <h3>
                @ViewBag.message
            </h3>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Name" class="form-control" />

                </div>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Price" class="form-control" />

                </div>
                <span asp-validation-for="Price"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Image"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Image" class="form-control" type="file" />

                </div>
                <span asp-validation-for="Image"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="isAvailable"></label>
                </div>
                <div class="col-5">
                    <input asp-for="isAvailable" type="checkbox" />


                </div>
                <span asp-validation-for="isAvailable"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ProductColor"></label>
                </div>
                <div class="col-5">
                    <input asp-for="ProductColor" class="form-control" />
                </div>
                <span asp-validation-for="ProductColor"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ProductTypeId"></label>
                </div>
                <div class="col-5">
                    <select asp-for="ProductTypeId" asp-items="@ViewBag.ProductTypeId" class="form-control" required>

                    </select>
                </div>
                <span asp-validation-for="ProductTypeId"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="SpecialTagId"></label>
                </div>
                <div class="col-5">
                    <select asp-for="SpecialTagId" asp-items="@ViewBag.TagId" class="form-control" required>

                    </select>
                </div>
                <span asp-validation-for="SpecialTagId"></span>
            </div>


            <button class="btn btn-primary">submit</button>
            <a asp-action="Index" class="btn btn-primary">Return to List</a>
        </div>
    </form>
</div>


@section Scripts {
    @* Client side validation *@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}